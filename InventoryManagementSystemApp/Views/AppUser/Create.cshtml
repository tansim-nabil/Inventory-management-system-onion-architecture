@model InventoryManagementSystemDomain.Entity.AppUser
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>App User</h4>
<hr />
<div class="col-sm-12">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
        @{
            if (TempData["Message"] != null){
                    <span class="text-danger">@TempData["Message"]</span>
            }
        }
        </div>

        <div class="row">
                <div class="form-group col-sm-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="MiddleName" class="control-label"></label>
                    <input asp-for="MiddleName" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" />
                </div>  
                <div class="form-group col-sm-3">
                    <label asp-for="Gender" class="control-label"></label>
                    <select class="form-control" asp-for="Gender" asp-items="@Html.GetEnumSelectList<InventoryManagementSystemDomain.Entity.Gender>()">
                    </select>
                </div>
        </div>
       
       
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

